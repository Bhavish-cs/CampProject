<% layout ('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/campgrounds.css">

    <div class="container">
        <!-- Hero Section -->
        <div class="campgrounds-hero">
            <div class="campgrounds-hero-content text-center">
                <h1><i class="fas fa-campground me-3"></i>All Campgrounds</h1>
                <p>Discover amazing camping destinations around the world</p>
            </div>
        </div>

        <!-- Map Container -->
        <div class="map-container mb-4">
            <div id="cluster-map">
                <div class="map-loading">
                    <div class="map-loading-content">
                        <div class="spinner"></div>
                        <h4 style="color: #2E5090; font-weight: 700;">üó∫Ô∏è Loading Interactive Map</h4>
                        <p style="color: #495057;">Preparing your adventure...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section Header -->
        <div class="section-header">
            <div class="section-header-content">
                <h3><i class="fas fa-mountain me-2"></i>Browse Campgrounds</h3>
                <p>Find your perfect camping destination</p>
            </div>
            <a href="/campgrounds/new" class="btn btn-add-campground">
                <i class="fas fa-plus-circle"></i>Add New Campground
            </a>
        </div>

        <!-- Campgrounds List -->
        <% if (campgrounds && campgrounds.length> 0) { %>
            <% campgrounds.forEach((campground, index)=> { %>
                <div class="campground-card" style="animation-delay: <%= index * 0.1 %>s;">
                    <div class="row g-0">
                        <!-- Image Column -->
                        <div class="col-md-4">
                            <div class="campground-card-image">
                                <% if (campground.images && campground.images.length> 0) { %>
                                    <img src="<%= campground.images[0].url %>" alt="<%= campground.title %>">
                                    <% if (campground.images.length> 1) { %>
                                        <span class="image-badge">
                                            <i class="fas fa-images"></i>
                                            +<%= campground.images.length - 1 %>
                                        </span>
                                        <% } %>
                                            <% } else if (campground.image) { %>
                                                <img src="<%= campground.image %>" alt="<%= campground.title %>">
                                                <% } else { %>
                                                    <div class="no-image-placeholder">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                    <% } %>
                                                        <span class="rating-badge">
                                                            <i class="fas fa-star"></i>
                                                            <%= (4.0 + Math.random()).toFixed(1) %>
                                                        </span>
                            </div>
                        </div>

                        <!-- Content Column -->
                        <div class="col-md-8">
                            <div class="campground-card-body">
                                <h5 class="campground-card-title">
                                    <%= campground.title %>
                                </h5>

                                <p class="campground-card-description">
                                    <%= campground.description && campground.description.length> 120
                                        ? campground.description.substring(0, 120) + '...'
                                        : campground.description %>
                                </p>

                                <p class="campground-card-location">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <%= campground.location %>
                                </p>

                                <div class="campground-card-footer">
                                    <div class="price-tag">
                                        <span class="price-amount">
                                            $<%= campground.price || Math.floor(Math.random() * 50) + 25 %>
                                        </span>
                                        <span class="price-period">/night</span>
                                    </div>
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-view-details">
                                        View Details
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-campground" style="font-size: 5rem; color: #DEE2E6;"></i>
                            <h3 class="mt-4 text-muted">No campgrounds found</h3>
                            <p class="text-muted">Be the first to add a campground!</p>
                            <a href="/campgrounds/new" class="btn btn-add-campground mt-3">
                                <i class="fas fa-plus-circle"></i>Add First Campground
                            </a>
                        </div>
                        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            setTimeout(() => initializeMap(), 1000);
        });

        function initializeMap() {
            const mapContainer = document.getElementById('cluster-map');

            if (typeof L === 'undefined') {
                mapContainer.innerHTML = '<div class="map-loading"><div class="map-loading-content"><p style="color: #dc3545;">‚ùå Map library failed to load</p></div></div>';
                return;
            }

            try {
                mapContainer.innerHTML = '';
                const map = L.map('cluster-map').setView([39.8283, -98.5795], 4);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '¬© OpenStreetMap',
                    maxZoom: 18
                }).addTo(map);

                const markers = L.markerClusterGroup({
                    iconCreateFunction: function (cluster) {
                        const count = cluster.getChildCount();
                        return L.divIcon({
                            html: `<div style="background: linear-gradient(135deg, #1E3A5F 0%, #34A0A4 100%); color: white; border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-weight: 700; box-shadow: 0 4px 10px rgba(0,0,0,0.3);">${count}</div>`,
                            className: 'custom-marker-cluster',
                            iconSize: L.point(40, 40)
                        });
                    }
                });

            <% if (campgrounds && campgrounds.length > 0) { %>
                <% campgrounds.forEach((campground) => { %>
                    <% if (campground.latitude && campground.longitude) { %>
                    {
                        const marker = L.marker([<%= campground.latitude %>, <%= campground.longitude %>]);
                        marker.bindPopup(`
                                <div style="min-width: 220px; font-family: 'Segoe UI', sans-serif;">
                                    <div style="background: linear-gradient(135deg, #1E3A5F 0%, #34A0A4 100%); margin: -10px -10px 15px -10px; padding: 15px; border-radius: 10px 10px 0 0; color: white;">
                                        <h6 style="margin: 0; font-weight: 700; font-size: 1.1rem;"><%= campground.title %></h6>
                                    </div>
                                    <% if (campground.images && campground.images.length > 0) { %>
                                        <img src="<%= campground.images[0].url %>" style="width: 100%; height: 130px; object-fit: cover; border-radius: 8px; margin-bottom: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
                                    <% } %>
                                    <p style="margin: 8px 0; color: #666; font-size: 0.9rem;">
                                        <i class="fas fa-map-marker-alt" style="color: #34A0A4;"></i> <%= campground.location %>
                                    </p>
                                    <div style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); padding: 12px; border-radius: 10px; margin: 12px 0;">
                                        <strong style="color: #34A0A4; font-size: 1.3rem;">$<%= campground.price || 25 %></strong>
                                        <span style="color: #666; font-size: 0.9rem;">/night</span>
                                    </div>
                                    <a href="/campgrounds/<%= campground._id %>" style="display: block; background: linear-gradient(135deg, #1E3A5F 0%, #2E5090 100%); color: white; text-align: center; padding: 10px; border-radius: 25px; font-weight: 600; text-decoration: none;">
                                        View Details ‚Üí
                                    </a>
                                </div>
                            `);
                        markers.addLayer(marker);
                    }
                        <% } %>
                <% }); %>
            <% } %>

                    map.addLayer(markers);
            } catch (error) {
                console.error('Map error:', error);
                mapContainer.innerHTML = '<div class="map-loading"><div class="map-loading-content"><p style="color: #dc3545;">‚ö†Ô∏è Map failed</p></div></div>';
            }
        }
    </script>