<% layout ('layouts/boilerplate') %>

    <h1>All Campgrounds</h1>

    <div>
        <a href="/campgrounds/new" class="btn btn-success mb-3">Add Campground</a>
    </div>

    <% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4 position-relative">
                    <% if (campground.images && campground.images.length> 0) { %>
                        <img class="img-fluid" alt="Campground Image" src="<%= campground.images[0].url %>"
                            style="height: 200px; width: 100%; object-fit: cover;">
                        <% if (campground.images.length> 1) { %>
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-dark">+<%= campground.images.length - 1 %></span>
                            </div>
                            <% } %>
                                <% } else if (campground.image) { %>
                                    <!-- Fallback for old single image format -->
                                    <img class="img-fluid" alt="Campground Image" src="<%= campground.image %>"
                                        style="height: 200px; width: 100%; object-fit: cover;">
                                    <% } else { %>
                                        <div class="d-flex align-items-center justify-content-center bg-light"
                                            style="height: 200px;">
                                            <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                        </div>
                                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">
                            View <%= campground.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>