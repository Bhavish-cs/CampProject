<% layout('layouts/boilerplate') %>
    <div class="row justify-content-center">
        <div class="col-8">
            <h1 class="text-center mb-4">Edit Campground</h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%= campground.title %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= campground.location %>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="images">Add New Images (Max 3 total)</label>
                    <input class="form-control" type="file" id="images" name="images" multiple accept="image/*">
                    <div class="form-text">Select additional images (current + new cannot exceed 3 total).</div>

                    <!-- Display current images -->
                    <% if (campground.images && campground.images.length> 0) { %>
                        <div class="mt-3">
                            <h6>Current Images:</h6>
                            <div class="row">
                                <% campground.images.forEach((img, index)=> { %>
                                    <div class="col-md-4 mb-2">
                                        <img src="<%= img.url %>" alt="Current Image <%= index + 1 %>"
                                            class="img-fluid rounded"
                                            style="height: 150px; object-fit: cover; width: 100%;">
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                        <% } else if (campground.image) { %>
                            <!-- Fallback for old single image format -->
                            <div class="mt-3">
                                <h6>Current Image:</h6>
                                <img src="<%= campground.image %>" alt="Current Image" class="img-fluid rounded"
                                    style="max-width: 200px;">
                            </div>
                            <% } %>
                </div>
                <div class="mb-3">
                    <label for="validationCustomUsername" class="form-label">Price</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">$</span>
                        <input type="text" class="form-control" id="validationCustomUsername"
                            aria-describedby="inputGroupPrepend" placeholder="0.00" name="campground[price]"
                            value="<%= campground.price %>" required>
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" name="campground[description]"
                        rows="3"><%= campground.description %></textarea>
                </div>
                <div class="mb-3 d-flex justify-content-between align-items-center px-2">
                    <button class="btn btn-info" type="submit">Update Campground</button>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary ms-2">Back To Campgrounds</a>
                </div>
            </form>
        </div>
    </div>