<% layout('layouts/boilerplate') %>

    <h1>Edit Campground</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%= campground.title %>" required>
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%= campground.location %>" required>
        </div>
        <div>
            <label for="image">Image URL</label>
            <input type="url" id="image" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]" value="<%= campground.price %>" min="0" step="0.01">
        </div>
        <div>
            <label for="description">Description</label>
            <textarea id="description" name="campground[description]" rows="3"><%= campground.description %></textarea>
        </div>
        <button type="submit">Update Campground</button>
    </form>

    <a href="/campgrounds/<%= campground._id %>">Back To Campground</a>