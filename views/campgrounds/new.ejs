<% layout('layouts/boilerplate') %>


    <form action="/campgrounds" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" required>
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" required>
        </div>
        <div>
            <label for="image">Image URL</label>
            <input type="url" id="image" name="campground[image]" placeholder="https://example.com/image.jpg">
        </div>
        <div>
            <label for="price">Price</label>
            <input type="number" id="price" name="campground[price]" min="0" step="0.01" placeholder="0.00">
        </div>
        <div>
            <label for="description">Description</label>
            <textarea id="description" name="campground[description]" rows="3"></textarea>
        </div>
        <button type="submit">Add Campground</button>
    </form>

    <footer><a href="/campgrounds">Back To Campground</a></footer>