<% layout('layouts/boilerplate')%>
    <div class="container-fluid d-flex flex-column justify-content-center align-items-center min-vh-100">
        <div class="row justify-content-center w-100">
            <div class="col-12 col-md-10 col-lg-8 text-center">
                <!-- Lottie Animation Container -->
                <div id="error-animation" class="mx-auto mb-4"></div>

                <!-- Error Message -->
                <div class="mt-3">
                    <h1 class="display-4 text-muted mb-3">Oops! Page Not Found</h1>
                    <p class="lead text-muted mb-4">
                        The page you're looking for seems to have wandered off into the wilderness.
                    </p>
                    <p class="text-muted mb-4">
                        Don't worry, even the best explorers get lost sometimes!
                    </p>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="/" class="btn btn-primary btn-lg me-md-2">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <a href="/campgrounds" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-campground me-2"></i>Browse Campgrounds
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Lottie Web Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bodymovin/5.10.1/lottie.min.js"></script>

    <!-- Initialize Lottie Animation -->
    <script>
        lottie.loadAnimation({
            container: document.getElementById('error-animation'), // Target div
            renderer: 'svg',        // Render as SVG
            loop: true,             // Loop animation
            autoplay: true,         // Start automatically
            path: '/404-animation.json'  // Path to your JSON file in public folder
        });
    </script>

    <style>
        .min-vh-100 {
            min-height: 100vh !important;
        }

        #error-animation {
            width: 450px;
            height: 450px;
            max-width: 90vw;
            max-height: 90vw;
            margin: 0 auto;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .btn {
            border-radius: 25px;
            font-weight: 500;
        }

        .display-4 {
            font-weight: 300;
        }

        /* Large desktop screens */
        @media (min-width: 1200px) {
            #error-animation {
                width: 500px;
                height: 500px;
            }
        }

        /* Tablet screens */
        @media (max-width: 992px) {
            #error-animation {
                width: 400px;
                height: 400px;
            }
        }

        /* Mobile screens */
        @media (max-width: 768px) {
            #error-animation {
                width: 300px;
                height: 300px;
                max-width: 80vw;
                max-height: 80vw;
            }

            .display-4 {
                font-size: 2rem;
            }

            .lead {
                font-size: 1rem;
            }

            .btn-lg {
                padding: 0.75rem 1.5rem;
                font-size: 1rem;
            }

            .container-fluid {
                padding-left: 15px;
                padding-right: 15px;
            }
        }

        /* Small mobile screens */
        @media (max-width: 576px) {
            #error-animation {
                width: 250px;
                height: 250px;
                max-width: 75vw;
                max-height: 75vw;
            }

            .display-4 {
                font-size: 1.8rem;
            }

            .btn-lg {
                font-size: 0.9rem;
                padding: 0.6rem 1.2rem;
            }
        }

        /* Ensure proper vertical centering */
        .d-flex.justify-content-center.align-items-center {
            min-height: 100vh;
        }
    </style>