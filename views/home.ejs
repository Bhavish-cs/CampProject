                <div class="col-md-3 col-6 mb-4">
                    <div class="stat-card">
                        <i class="fas fa-comments stat-icon"></i>
                        <h3 class="stat-number" data-target="12000">0</h3>
                        <p class="stat-label">Reviews</p>
                    </div>
